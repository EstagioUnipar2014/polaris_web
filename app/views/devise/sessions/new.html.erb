<div class="row">
  <div class="col-md-4">
  </div>
  <div class="col-md-4">
    <div class="well">
      <h2>Entrar</h2>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <p class="notice"><%= notice %></p>
      <p class="alert"><%= alert %></p>
      <div>
        <%= f.email_field :email, autofocus: true, class: "form-control login-input", placeholder: "Email" %>
      </div>

      <div>
        <%= f.password_field :password, autocomplete: "off", class: "form-control login-input", placeholder: "Senha" %>
      </div>

      <% if devise_mapping.rememberable? -%>
        <div><%= f.check_box :remember_me %> <%= f.label "Lembre-me" %></div>
    <% end -%>

      <div><%= f.submit "Entrar", class: "btn btn-success" %></div>
    <% end %>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
