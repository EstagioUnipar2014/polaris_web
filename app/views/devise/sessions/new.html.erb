<div id="login-container">
  <h2>Entrar</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div>
    	<%= f.email_field :email, autofocus: true, class: "form-control login-input", placeholder: "Email" %>
    </div>

    <div>
      <%= f.password_field :password, autocomplete: "off", class: "form-control login-input", placeholder: "Senha" %>
    </div>

    <% if devise_mapping.rememberable? -%>
    	<div><%= f.check_box :remember_me %> <%= f.label "Lembre-me" %></div>
    <% end -%>

    <div><%= f.submit "Entrar", class: "btn btn-default" %></div>
  <% end %>
  <%= render "devise/shared/links" %>
  <p class="notice"><%= notice %></p>
  <p class="alert"><%= alert %></p>
</div>
