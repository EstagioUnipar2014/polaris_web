<div class="panel panel-default">
  <div class="panel-heading">
    <span class="page-title animais">Animais</span>
    <%= link_to 'New Animal', new_animal_path %>
    <table class="table table-condensed">
      <thead>
        <tr>
          <th>Identificacao</th>
          <th>Nome</th>
          <th>Data nascimento</th>
          <th>Sexo</th>
          <th>Ativo</th>
          <th>Lactacao</th>
          <th>Nascido na propriedade</th>
          <th>Informacoes</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
      <% @animais.each do |animal| %>
        <tr>
        <td><%= animal.identificacao %></td>
        <td><%= animal.nome %></td>
        <td><%= animal.data_nascimento %></td>
        <td><%= animal.sexo %></td>
        <% if  animal.ativo %>
          <td><%= image_tag "icon-true.png"%></td>
        <% else %>
          <td><%= image_tag "icon-false.png"%></td>
        <% end %>
        <% if  animal.lactacao %>
          <td><%= image_tag "icon-true.png"%></td>
        <% else %>
          <td><%= image_tag "icon-false.png"%></td>
        <% end %>
        <% if  animal.nascido_na_propriedade %>
          <td><%= image_tag "icon-true.png"%></td>
        <% else %>
          <td><%= image_tag "icon-false.png"%></td>
        <% end %>
        <td><%= animal.informacoes %></td>
        <td><%= link_to 'Detalhes', animal %></td>
        <td><%= link_to 'Editar', edit_animal_path(animal) %></td>
        <td><%= link_to 'Apagar', animal, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
      </tbody>
    </table>
  </div>
</div>
    <br>

