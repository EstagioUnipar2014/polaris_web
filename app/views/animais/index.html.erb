<div class="panel panel-default">
  <div class="panel-heading">
    <span class="page-title animais">Animais</span>
    <%= link_to 'Novo animal', new_animal_path, class: 'novo-animal-link' %>
    <%= link_to 'Relatorio', animais_path(format: 'pdf')%>
    <table class="table table-condensed">
      <thead>
        <tr>
          <th>Identificacao</th>
          <th>Nome</th>
          <th>Raça</th>
          <th>Classificacao</th>
          <th>Data nasc.</th>
          <th>Sexo</th>
          <th>Ativo</th>
          <th>Lactação</th>
          <th>Nasc. na Prop.</th>
          <th>Informaçẽos</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
      <% @animais.each do |animal| %>
        <tr>
        <td><%= animal.identificacao %></td>
        <td><%= animal.nome %></td>
        <td><%= animal.raca.nome %></td>
        <td><%= animal.classificacao.descricao %></td>
        <td><%= animal.data_nascimento %></td>
        <td><%= animal.sexo %></td>
        <td><%= t_f(animal.ativo) %></td>
        <td><%= t_f(animal.lactacao) %>
        <td><%= t_f(animal.nascido_na_propriedade) %>
        <td><%= animal.informacoes %></td>
        <td><%= link_to 'abrir', animal %></td>
        <td><%= link_to 'editar', edit_animal_path(animal) %></td>
        <td><%= link_to 'excluir', animal, method: :delete, data: { confirm: 'Deseja excluir?' } %></td>
      </tr>
    <% end %>
      </tbody>
    </table>
  </div>
</div>

   

