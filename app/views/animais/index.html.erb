<h1>Listing animais</h1>

<table>
  <thead>
    <tr>
      <th>Identificacao</th>
      <th>Nome</th>
      <th>Data nascimento</th>
      <th>Sexo</th>
      <th>Ativo</th>
      <th>Lactacao</th>
      <th>Nascido na propriedade</th>
      <th>Informacoes</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @animais.each do |animal| %>
      <tr>
        <td><%= animal.identificacao %></td>
        <td><%= animal.nome %></td>
        <td><%= animal.data_nascimento %></td>
        <td><%= animal.sexo %></td>
        <td><%= animal.ativo %></td>
        <td><%= animal.lactacao %></td>
        <td><%= animal.nascido_na_propriedade %></td>
        <td><%= animal.informacoes %></td>
        <td><%= link_to 'Show', animal %></td>
        <td><%= link_to 'Edit', edit_animal_path(animal) %></td>
        <td><%= link_to 'Destroy', animal, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

