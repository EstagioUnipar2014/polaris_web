<p id="notice"><%= notice %></p>
<div class='panel panel-default'>
  <h2>Dados do animal</h2>
  <p>
  <strong>Identificacao:</strong>
  <%= @animal.identificacao %>
  </p>

  <p>
  <strong>Nome:</strong>
  <%= @animal.nome %>
  </p>

  <p>
  <strong>Ra√ßa:</strong>
  <%= @animal.raca.nome %>
  </p>

  <p>
  <strong>Classificacao:</strong>
  <%= @animal.classificacao.descricao %>
  </p>

  <p>
  <strong>Data nascimento:</strong>
  <%= @animal.data_nascimento %>
  </p>

  <p>
  <strong>Sexo:</strong>
  <%= @animal.sexo %>
  </p>

  <p>
  <% if !@animal.cios.empty? %>
    <strong>Data de cio prevista:</strong>
  <%= @animal.cios.last.data_cio%>
<% end %>  	
  </p>	

  <p>
  <strong>Ultima pesagem:</strong>
  <% if !@animal.pesagens.empty? %> 
    <%= @animal.pesagens.last.peso %> Kg
  <% end %>
  <div id="nova-pesagem" style="display:none">
    <h2>Nova Pesagem</h2> 	
    <%= render 'pesagens/form' %>
  </div>
  <a id='nova-pesagem-button'>Nova pesagem </a>
  </p>

  <p>
  <strong>Ativo:</strong>
  <%= @animal.ativo %>
  </p>

  <p>
  <strong>Lactacao:</strong>
  <%= @animal.lactacao %>
  </p>

  <p>
  <strong>Nascido na propriedade:</strong>
  <%= @animal.nascido_na_propriedade %>
  </p>

  <p>
  <strong>Informacoes:</strong>
  <%= @animal.informacoes %>
  </p>

<div>
  <% if !@animal.vacinas.pendente.empty? %>	
	  <h3>Vacinas Pendentes</h3>	
	  <% @animal.vacinas.pendente.each do |vacina| %>
	  	<p><%= vacina.id %></p>
	  <% end %>
  <% end %>	  
</div>
	
<div id="novaVacina" style="display:none">
  <h3>Agendar vacina</h3> 	
  <%= render 'vacinas/form' %>
</div>
  <a id='nova-vacina-button'>Nova vacina</a><br>

<div>
  <% if !@animal.exames.pendente.empty? %>	
	  <h3>Exames Pendentes</h3>	
	  <% @animal.exames.pendente.each do |exame| %>
	  	<p><%= exame.id %></p>
	  <% end %>
  <% end %>	  
</div>

<div id="novoExame" style="display:none">
  <h2>Agendar exame</h2> 	
  <%= render 'exames/form' %>
</div>

  <a id='novo-exame-button'>Novo exame</a><br>

  <%= link_to 'Editar', edit_animal_path(@animal) %> |
  <%= link_to 'Voltar', animais_path %>
</div>
