<% pesagens = @pesagens %>
<% if params[:format] %>
  <% pesagens = Pesagem.animal(params[:format])%>
<% end %>  

<div class="panel panel-default">
  <div class="panel-heading">
    <span class="page-title animais">Pesagens</span>
    <%= link_to 'Nova Pesagem', new_pesagem_path, class: 'novo-animal-link' %>
    <table class="table table-condensed">
  		<thead>
    		<tr>
      			<th>Identificacao</th>
      			<th>Nome</th>
      			<th>Peso</th>
      			<th>Data de pesagem</th>
      			<th colspan="3"></th>
    		</tr>
  		</thead>

  		<tbody>	
    	<% pesagens.each do |pesagem| %>
        	<tr>
      			<td><%= pesagem.animal.identificacao %></td>
      			<td><%= pesagem.animal.nome %></td>
        		<td><%= pesagem.peso %></td>
        		<td><%= pesagem.data_pesagem %></td>
        		<td><%= link_to 'Abrir', pesagem %></td>
        		<td><%= link_to 'Editar', edit_pesagem_path(pesagem) %></td>
        		<td><%= link_to 'Excluir', pesagem, method: :delete, data: { confirm: 'Deseja excluir?' } %></td>
      		</tr>
    	<% end %>
  		</tbody>
	</table>
 </div>
</div>



