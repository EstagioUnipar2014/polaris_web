<div class='panel panel-default'>
  <div class='panel-heading'>
    <span class='page-title'>Alertas</span>
  </div>
  <table class='table table-condensed'>
    <thead>
      <tr>
        <th>Mensagem</th>
      </tr>
    </thead>
    <tbody>
    <% @notificacoes.each do |notificacao| %>
      <tr>
      	<td>
          <%= link_to (notificacao.url) do %>
            <%= notificacao.mensagem %>
          <% end %>
        </td>	
      </tr>
    <% end %>
    </tbody>
  </table>
</div>
