<div class="panel panel-default">
	<div class="panel-heading">
		<span class="page-title animais">Tipo vacinas</span>
		<%= link_to 'Novo Tipo vacina', new_tipo_vacina_path,  class: 'novo-animal-link' %>
		<table class="table table-condensed">
			<thead>
				<tr>
					<th>Descricao</th>
					<th colspan="3"></th>
				</tr>
			</thead>

			<tbody>
				<% @tipo_vacinas.each do |tipo_vacina| %>
					<tr>
						<td><%= tipo_vacina.descricao %></td>
						<td><%= link_to 'Abrir', tipo_vacina %></td>
						<td><%= link_to 'Editar', edit_tipo_vacina_path(tipo_vacina) %></td>
						<td><%= link_to 'Excluir', tipo_vacina, method: :delete, data: { confirm: 'Are you sure?' } %></td>
					</tr>
				<% end %>
			</tbody>
		</table>
	</div>
</div>
