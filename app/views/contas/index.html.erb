<div class="panel panel-default">
  <div class="panel-heading">
    <h3>Contas</h3>
  </div>
  <div class="panel-body">
    <%= link_to "Nova conta", new_conta_path, class: "btn btn-md btn-default" %>
    <table class="table table-hover">
      <thead>
        <tr>
          <th>Descrição</th>
          <th>Saldo</th>
          <th>Ativa</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
      <% @contas.each do |conta| %>
        <tr>
          <td><%= conta.descricao %></td>
          <td><%= number_to_currency(conta.saldo, :unit => "R$") %></td>
          <td><%= t_f conta.ativa %></td>
          <td><%= link_to 'Show', conta %></td>
          <td><%= link_to 'Destroy', conta, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>
