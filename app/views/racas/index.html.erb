<h1>Listing racas</h1>

<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @racas.each do |raca| %>
      <tr>
        <td><%= raca.nome %></td>
        <td><%= link_to 'Show', raca %></td>
        <td><%= link_to 'Edit', edit_raca_path(raca) %></td>
        <td><%= link_to 'Destroy', raca, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Raca', new_raca_path %>
