<div class="panel panel-default">
	<div class="panel-heading">
		<span class="page-title animais">Medicamentos</span>
		<%= link_to 'Novo Medicamento', new_medicamento_path, class: 'novo-animal-link' %>
		<table class="table table-condensed">
			<thead>
				<tr>
					<th>Nome</th>
					<th>Tipo medicamento</th>
					<th colspan="3"></th>
				</tr>
			</thead>

			<tbody>
				<% @medicamentos.each do |medicamento| %>
					<tr>
						<td><%= medicamento.nome %></td>
						<td><%= medicamento.tipo_medicamento.descricao %></td>
						<td><%= link_to 'Abir', medicamento %></td>
						<td><%= link_to 'Editar', edit_medicamento_path(medicamento) %></td>
						<td><%= link_to 'Excluir', medicamento, method: :delete, data: { confirm: 'Are you sure?' } %></td>
					</tr>
				<% end %>
			</tbody>
		</table>
	</div>
</div>
