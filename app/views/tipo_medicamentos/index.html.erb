<div class="panel panel-default">
	<div class="panel-heading">
		<span class="page-title animais">Tipo Medicamentos</span>
		<%= link_to 'Novo Tipo medicamento', new_tipo_medicamento_path,  class: 'novo-animal-link' %>
		<table class="table table-condensed">
			<thead>
				<tr>
					<th>Descricao</th>
					<th colspan="3"></th>
				</tr>
			</thead>

			<tbody>
				<% @tipo_medicamentos.each do |tipo_medicamento| %>
					<tr>
						<td><%= tipo_medicamento.descricao %></td>
						<td><%= link_to 'Abrir', tipo_medicamento %></td>
						<td><%= link_to 'Editar', edit_tipo_medicamento_path(tipo_medicamento) %></td>
						<td><%= link_to 'Excluir', tipo_medicamento, method: :delete, data: { confirm: 'Are you sure?' } %></td>
					</tr>
				<% end %>
			</tbody>
		</table>
	</div>
</div>
