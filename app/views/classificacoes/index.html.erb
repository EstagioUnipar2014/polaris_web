<div class="panel panel-default">
	<div class="panel-heading">
		<span class="page-title animais">Classificações do animal</span>
		<%= link_to 'Nova Classificação', new_classificacao_path,  class: 'novo-animal-link' %>
		<table class="table table-condensed">
			<thead>
				<tr>
					<th>Descricao</th>
					<th colspan="3"></th>
				</tr>
			</thead>

			<tbody>
				<% @classificacoes.each do |classificacao| %>
					<tr>
						<td><%= classificacao.descricao %></td>
						<td><%= link_to 'Abrir', classificacao %></td>
						<td><%= link_to 'Editar', edit_classificacao_path(classificacao) %></td>
						<td><%= link_to 'Excluir', classificacao, method: :delete, data: { confirm: 'Are you sure?' } %></td>
					</tr>
				<% end %>
			</tbody>
		</table>
	</div>
</div>