<div class="panel panel-default">
  <div class="panel-heading">
    <span class="page-title animais">Animais</span>
    <%= link_to 'Nova dieta', new_dieta_path, class: 'novo-animal-link' %>
    <%= link_to 'Relatorio', dietas_path(format: 'pdf')%>
    <table class="table table-condensed">
      <thead>
    	<tr>
      		<th>Descricao</th>
      		<th colspan="3"></th>
    	</tr>
  	  </thead>
  	  <tbody>
    	<% @dietas.each do |dieta| %>
    	  <tr>
       		 <td><%= dieta.descricao %></td>
        	 <td><%= link_to 'Abrir', dieta %></td>
        	 <td><%= link_to 'Editar', edit_dieta_path(dieta) %></td>
        	 <td><%= link_to 'Excluir', dieta, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      	  </tr>
    	<% end %>
    </tbody>
    </table>
  </div>
</div>
