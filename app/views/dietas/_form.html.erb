<%= form_for(@dieta) do |f| %>
  <% if @dieta.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@dieta.errors.count, "error") %> prohibited this dieta from being saved:</h2>

      <ul>
      <% @dieta.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :descricao %><br>
    <%= f.text_field :descricao %>
  </div>
 
  <table border="1" id="tabela_ciclos">
  	<thead>
  		<th></th>
  		<th>Ciclo</th>	
  		<th>Alimento </th>
  	</thead>
  	<% Ciclo.all.each do |ciclo| %>
  		<tr>
  			<td><%= f.check_box(:ciclo_ids, { :multiple => true }, @dieta) %></td>
  			<td><%= ciclo.descricao %></td>
  			<td>
  			<% ciclo.alimentos.each do |alimento|%>
  				<% alimento.medidas.peso(ciclo).each do |peso| %>
  					<p><%= alimento.descricao %>, <%= peso.quantidade %></p>
  				<% end %>		
  			<% end %>
  			</td>			
  		</tr>
  	<% end %>	
  </table>	
 
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
