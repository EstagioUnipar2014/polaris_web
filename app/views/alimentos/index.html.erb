<div class="panel panel-default">
	<div class="panel-heading">
		<span class="page-title animais">Alimentos</span>
		<%= link_to 'Novo Alimento', new_alimento_path , class: 'novo-animal-link' %>
		<table class="table table-condensed">
			<thead>
				<tr>
					<th>Descricao</th>
					<th colspan="3"></th>
				</tr>
			</thead>

			<tbody>
				<% @alimentos.each do |alimento| %>
					<tr>
						<td><%= alimento.descricao %></td>
						<td><%= link_to 'Abrir', alimento %></td>
						<td><%= link_to 'Editar', edit_alimento_path(alimento) %></td>
						<td><%= link_to 'Excluir', alimento, method: :delete, data: { confirm: 'Are you sure?' } %></td>
					</tr>
				<% end %>
			</tbody>
		</table>
	</div>
</div>

