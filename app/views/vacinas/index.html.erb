<div class="panel panel-default">
  <div class="panel-heading">
    <span class="page-title animais">Vacinas</span>
    <%= link_to 'Relatorio', vacinas_path(:format => 'pdf')%>
    <%= link_to 'Nova vacina', new_vacina_path, class: 'novo-animal-link' %>
    <table class="table table-condensed">
      <thead>
   	<tr>
   	  <th>Animal</th>	
   	  <th>Tipo vacina</th>
   	  <th>Dosagem</th>
          <th>Data vacina</th>
          <th>Efetuada</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
    	<% @vacinas.each do |vacina| %>
      	  <tr>
      	    <td><%= vacina.animal.identificacaoNome %></td>
      	    <td><%= vacina.tipo_vacina.descricao %></td>
      	    <td><%= vacina.dosagem %></td>
            <td><%= vacina.data_vacina %></td>
            <td><%= t vacina.efetuada.class %></td>
            <td><%= link_to 'Abrir', vacina %></td>
            <td><%= link_to 'Editar', edit_vacina_path(vacina) %></td>
            <td><%= link_to 'Excluir', vacina, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div> 
</div>   

