<h1>Listing vacinas</h1>

<table>
  <thead>
    <tr>
      <th>Data vacina</th>
      <th>Efetuada</th>
      <th>Dosagem</th>
      <th>Animal</th>
      <th>Tipo vacina</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @vacinas.each do |vacina| %>
      <tr>
        <td><%= vacina.data_vacina %></td>
        <td><%= vacina.efetuada %></td>
        <td><%= vacina.dosagem %></td>
        <td><%= vacina.animal %></td>
        <td><%= vacina.tipo_vacina %></td>
        <td><%= link_to 'Show', vacina %></td>
        <td><%= link_to 'Edit', edit_vacina_path(vacina) %></td>
        <td><%= link_to 'Destroy', vacina, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

