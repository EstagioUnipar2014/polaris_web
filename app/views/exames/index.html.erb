<div class="panel panel-default">
  <div class="panel-heading">
    <span class="page-title animais">Exames</span>
    <%= link_to 'Relatorio', exames_path(:format => 'pdf') %>
    <%= link_to 'Novo exame', new_exame_path, class: 'novo-animal-link' %>
    <table class="table table-condensed">
      <thead>
    	<tr>
    	  <th>Animal</th>
    	  <th>Descricao</th>
    	  <th>Tipo exame</th>
      	  <th>Data</th>
      	  <th>Efetuado</th>
      	  <th>Resultado</th>
      	  <th>Informacoes</th>
      	  <th colspan="3"></th>
    	</tr>
  	  </thead>

  	  <tbody>
      <% @exames.each do |exame| %>
      	<tr>
      	  <td><%= exame.animal.identificacaoNome%></td>
      	  <td><%= exame.descricao %></td>
      	  <td><%= exame.tipo_exame.descricao %></td>
          <td><%= exame.data %></td>
          <td><%= t exame.efetuado.class %></td>
          <td><%= exame.resultado %></td>
          <td><%= exame.informacoes %></td>
          <td><%= link_to 'Abrir', exame %></td>
          <td><%= link_to 'Editar', edit_exame_path(exame) %></td>
          <td><%= link_to 'Excluir', exame, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>    

