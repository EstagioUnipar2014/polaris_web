<div class="panel panel-default">
	<div class="panel-heading">
		<span class="page-title animais">Ordenhas</span>
		<%= link_to 'Nova Ordenha', new_ordenha_path , class: 'novo-animal-link' %>
		<table class="table table-condensed">
			<thead>
				<tr>
					<th>Animal</th>
					<th>Data</th>
					<th>Periodo</th>
					<th>Quantidade</th>
					<th colspan="3"></th>
				</tr>
			</thead>

			<tbody>
				<% @ordenhas.each do |ordenha| %>
					<tr>
						<td><%= ordenha.animal.identificacaoNome %></td>
						<td><%= ordenha.data %></td>
						<td><%= ordenha.periodo %></td>
						<td><%= ordenha.quantidade %></td>
						<td><%= link_to 'Abrir', ordenha %></td>
						<td><%= link_to 'Editar', edit_ordenha_path(ordenha) %></td>
						<td><%= link_to 'Excluir', ordenha, method: :delete, data: { confirm: 'Are you sure?' } %></td>
					</tr>
				<% end %>
			</tbody>
		</table>
	</div>
</div>