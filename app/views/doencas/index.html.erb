<div class="panel panel-default">
  <div class="panel-heading">
    <span class="page-title animais">Doenças</span>
    <%= link_to 'Nova doença', new_doenca_path, class: 'novo-animal-link' %>
    <table class="table table-condensed">
      <thead>
       <tr>
        <th>Nome</th>
        <th>Descricao</th>
        <th colspan="3"></th>
       </tr>
      </thead>

  <tbody>
    <% @doencas.each do |doenca| %>
      <tr>
        <td><%= doenca.nome %></td>
        <td><%= doenca.descricao %></td>
        <td><%= link_to 'Abrir', doenca %></td>
        <td><%= link_to 'Editar', edit_doenca_path(doenca) %></td>
        <td><%= link_to 'Excluir', doenca, method: :delete, data: { confirm: 'Deseja excluir?' } %></td>
      </tr>
   <% end %>
    </tbody>
	</table>
  </div>
</div>  	
